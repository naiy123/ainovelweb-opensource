{
  "name": "ainovelweb",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "predev": "fuser -k 3000/tcp 2>/dev/null || true",
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && npm run electron:copy-static && electron-builder",
    "electron:copy-static": "cp -r .next/static .next/standalone/.next/ && cp -r public .next/standalone/",
    "lab:process": "npx tsx --env-file=.env labs/rag-research/knowledge-pipeline/cli.ts process",
    "lab:batch": "npx tsx --env-file=.env labs/rag-research/knowledge-pipeline/cli.ts batch",
    "lab:index": "npx tsx --env-file=.env labs/rag-research/knowledge-pipeline/cli.ts index",
    "lab:test": "npx tsx --env-file=.env labs/rag-research/knowledge-pipeline/test-chapter-gen.ts"
  },
  "dependencies": {
    "@google-cloud/aiplatform": "^6.0.0",
    "@google-cloud/vertexai": "^1.10.0",
    "@google/genai": "^1.30.0",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tanstack/react-query": "^5.90.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.0",
    "lucide-react": "^0.555.0",
    "next": "^15.1.9",
    "next-themes": "^0.4.6",
    "openai": "^4.77.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-hook-form": "^7.66.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "undici": "^7.16.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@prisma/client": "^6.2.1",
    "@tailwindcss/postcss": "^4",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "electron": "^34.3.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9",
    "eslint-config-next": "15.1.0",
    "kill-port": "^2.0.1",
    "prisma": "^6.2.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.3"
  }
}
