{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.ainovelweb.app",
  "productName": "AI Novel Web",
  "directories": {
    "output": "dist-electron",
    "buildResources": "build"
  },
  "files": [
    "electron/**/*",
    ".next/standalone/**/*",
    ".next/static/**/*",
    "prisma/data.db",
    "public/**/*"
  ],
  "extraResources": [
    {
      "from": ".next/static",
      "to": "app/.next/static"
    },
    {
      "from": "public",
      "to": "app/public"
    },
    {
      "from": "public",
      "to": "assets"
    }
  ],
  "asar": true,
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "AI Novel Web"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "build/icon.icns",
    "category": "public.app-category.productivity"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.png",
    "category": "Office"
  }
}
